<?xml version="1.0" encoding="UTF-8" ?>

<widget xmlns		="http://www.w3.org/ns/widgets"
	xmlns:gap	="http://phonegap.com/ns/1.0"
	id		="nl.stichtingtoegankelijkehoreca.app"
	versionCode 	="1"
	version		="1.0.0"  >
    
    <preference name="phonegap-version" value="cli-5.2.0" />
    <feature name="http://api.phonegap.com/1.0/device" />
	
	<name>HorecaAccess</name>
    
	<description>Stichting Toegankelijke Horeca helpt om horeca in Nederland toegankelijk te maken voor iedereen</description>
    
	<author href = "http://www.stichtingtoegankelijkehoreca.nl" email = "info@stichtingtoegankelijkehoreca.nl">
		Roeland Verbakel
	</author>

	<preference name="orientation" value="portrait" />  

	<icon src="icon.png" />
	
    <icon src="res/icons/ios/Icon-App-57x57@1x.png" gap:platform="ios" width="57" height="57" />
    <icon src="res/icons/ios/Icon-App-57x57@2x.png" gap:platform="ios" width="114" height="114" />    
    <icon src="res/icons/ios/Icon-App-72x72@1x.png" gap:platform="ios" width="72" height="72" />
    <icon src="res/icons/ios/Icon-App-72x72@2x.png" gap:platform="ios" width="144" height="144" />

    <icon src="res/icons/android/drawable-ldpi/ic_launcher.png" gap:platform="android" gap:density="ldpi" />
    <icon src="res/icons/android/drawable-mdpi/ic_launcher.png" gap:platform="android" gap:density="mdpi" />
    <icon src="res/icons/android/drawable-hdpi/ic_launcher.png" gap:platform="android" gap:density="hdpi" />
    <icon src="res/icons/android/drawable-xdpi/ic_launcher.png" gap:platform="android" gap:density="xhdpi" />
	
    <gap:splash src="splash-new.png" />
    
    <gap:splash src="res/screen/android/drawable-ldpi/playstore-icon.png"  gap:platform="android" gap:density="ldpi" />
    <gap:splash src="res/screen/android/drawable-mdpi/playstore-icon.png"  gap:platform="android" gap:density="mdpi" />
    <gap:splash src="res/screen/android/drawable-hdpi/playstore-icon.png"  gap:platform="android" gap:density="hdpi" />
    <gap:splash src="res/screen/android/drawable-xdpi/playstore-icon.png" gap:platform="android" gap:density="xhdpi" />
    
    <gap:splash src="res/screen/ios/Default.png" gap:platform="ios" width="320" height="480" />
    <gap:splash src="res/screen/ios/Default@2x.png" gap:platform="ios" width="680" height="960" />
    <gap:splash src="res/screen/ios/Deafult-568h-2x.png" gap:platform="ios" width="640" height="1136" />

    <content src="http://www.stichtingtoegankelijkehoreca.nl" subdomains="true"></content>
	<access origin="*"></access>
    
</widget>
